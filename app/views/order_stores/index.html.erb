<p id="notice"><%= notice %></p>

<h1>Order Stores</h1>

<table id="order_table" class="table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>Value</th>
      <th>Status</th>
      <th>Order date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_stores.each do |order_store| %>
      <tr>
        <td><%= order_store.value %></td>
        <td><%= order_store.status %></td>
        <td><%= order_store.order_date.strftime("%-d/%-m/%Y %H:%M") %></td>
        <td><%= link_to 'Show', order_store %></td>
        <td><%= link_to 'Edit', edit_order_store_path(order_store) %></td>
        <td><%= link_to 'Destroy', order_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

